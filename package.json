{
  "name": "bump-package-version",
  "license": "MIT",
  "version": "0.1.0",
  "private": true,
  "description": "A GitHub action to bump package.json versions",
  "author": "Mathieu Acthernoene <zoontek@gmail.com>",
  "homepage": "https://github.com/zoontek/bump-package-version#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/zoontek/bump-package-version.git"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "format": "prettier '**/*' -u -w",
    "build": "rm -rf dist && ncc build src/index.ts -o dist --source-map",
    "typecheck": "tsc --noEmit"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.10.1"
  },
  "devDependencies": {
    "@types/node": "^20.14.2",
    "@vercel/ncc": "^0.38.1",
    "prettier": "^3.3.1",
    "prettier-plugin-organize-imports": "^3.2.4",
    "typescript": "^5.4.5"
  }
}
